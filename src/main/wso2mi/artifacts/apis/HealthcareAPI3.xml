<?xml version="1.0" encoding="UTF-8"?>
<api context="/healthcareapi3" name="HealthcareAPI3" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" uri-template="/categories/{category}/reserve">
        <inSequence>
            <datamapper config="resources:datamapper/RequestMapping/RequestMapping.dmc"
                inputSchema="resources:datamapper/RequestMapping/RequestMapping_inputSchema.json"
                outputSchema="resources:datamapper/RequestMapping/RequestMapping_outputSchema.json" />
            <http.post configKey="HospitalConnection">
                <relativePath>/${payload.hospital_id}/categories/${params.pathParams.category}/reserve</relativePath>
                <headers>[]</headers>
                <requestBodyType>JSON</requestBodyType>
                <requestBodyJson>${payload}</requestBodyJson>
                <forceScAccepted>false</forceScAccepted>
                <disableChunking>false</disableChunking>
                <forceHttp10>false</forceHttp10>
                <noKeepAlive>false</noKeepAlive>
                <forcePostPutNobody>false</forcePostPutNobody>
                <responseVariable>http_post_1</responseVariable>
                <overwriteBody>true</overwriteBody>
            </http.post>
            <respond />
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
</api>